<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".RestoreOrNewActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/restoreOrNew_username_placeholder"
        android:ems="10"
        android:id="@+id/restoreOrNew_editText_username"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/restoreOrNew_button_createNewWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:enabled="false"
        android:text="Create New Wallet"
        android:clickable="false"
        android:textSize="20sp"
        android:padding="24dp"
        android:layout_below="@+id/restoreOrNew_editText_username"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Restore Wallet"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/restoreOrNew_button_createNewWallet"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/restoreOrNew_editText_passphrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="22dp"
        android:hint="@string/restoreOrCreate_passphrase_placeholder" />

    <Button
        android:id="@+id/restoreOrNew_button_restoreWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restoreOrNew_editText_passphrase"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="Restore Wallet" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:text="If you already have a CoinBlesk wallet, you can restore it on this device by entering the passphrase below. You can find the passphrase of your account at Settings->Wallet Backup->Backup Phrase" />



</RelativeLayout>