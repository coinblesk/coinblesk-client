<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/termOfUseLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PopupLayoutActivity" >

    <GridLayout
        android:id="@+id/termOfUseLayoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#434446"
        android:columnCount="2"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="10dip" >

        <ImageButton
            android:id="@+id/termOfUseImageCloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:gravity="right"
            android:contentDescription="@string/termOfUseImageCloseBtn"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_navigation_cancel" />

        <TextView
            android:id="@+id/termOfUseTitleView"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:textColor="#fff"
            android:text="@string/termOfUseTitleView" 
            android:textSize="@dimen/textSizeBig" />

    </GridLayout>

        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentRight="true"
        	android:layout_below="@+id/termOfUseLayoutHeader"
        	android:background="#434446"
        	android:padding="10dip">
       		<LinearLayout 
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:orientation="vertical"
		        android:background="#434446" >
       		    
       			<TextView
		            android:id="@+id/termOfUseTextView"
		            android:layout_width="fill_parent"
		            android:layout_height="match_parent"
		            android:textColor="#fff"
		            android:textSize="@dimen/textSize"
		            android:text="@string/termOfUseTextView" />
	       		</LinearLayout>     
        </ScrollView>

</RelativeLayout>