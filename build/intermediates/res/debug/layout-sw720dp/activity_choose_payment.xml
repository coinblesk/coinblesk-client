<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ch.uzh.csg.coinblesk.client.ChoosePaymentActivity"
    tools:ignore="MergeRootFrame" >
    
        <Button
            android:id="@+id/choosePayment_sendPaymentBtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_pay_payment_big"
            android:drawableLeft="@drawable/ic_nfc_small"
            android:text="@string/choosePayment_sendPaymentBtnText" />

        <Button
            android:id="@+id/choosePayment_requestPaymentBtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_receive_payment_big"
            android:drawableLeft="@drawable/ic_nfc_small"
            android:text="@string/choosePayment_requestPaymentBtnText" />

        <Button
            android:id="@+id/choosePayment_requestPaymentNoNfcBtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_pay_payment_big"
            android:drawableLeft="@drawable/ic_online"
            android:text="@string/choosePayment_requestPaymentNoNfcBtnText" />

</LinearLayout>

