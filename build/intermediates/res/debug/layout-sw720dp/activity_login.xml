<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

        <EditText
            android:id="@+id/loginUsernameEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="75dp"
            android:background="#fff"
            android:ems="10"
            android:hint="@string/loginUsernameEditText"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/loginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:background="#fff"
            android:ems="10"
            android:hint="@string/loginPasswordEditText"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/loginPasswordOrUsernameForgottenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="@string/loginPasswordOrUsernameForgottenTextView"
            android:textColor="#1e5db2" />
        
         <Button
            android:id="@+id/loginSignInBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonHeight"
            android:layout_marginTop="24dp"
            android:text="@string/loginSignInBtn" />

        <Button
            android:id="@+id/loginSignUpBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonHeight"
            android:layout_marginTop="24dp"
            android:text="@string/loginSignUpBtn" />
</LinearLayout><!-- From: file:/home/rvoellmy/projects/coinblesk/workspace/app/src/main/res/layout-sw720dp/activity_login.xml -->