<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayOutBalanceActivity" >

    <TextView
        android:id="@+id/setting_payOut_balance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="#C1CDCD"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/setting_payOut_balance_title"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/setting_payOut_balance_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:ems="15"
        android:hint="@string/setting_payOut_balance_Value"
        android:inputType="numberDecimal|numberSigned" >

        <requestFocus />
    </EditText>
</LinearLayout>
