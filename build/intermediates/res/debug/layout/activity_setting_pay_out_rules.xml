<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingPayOutRulesActivity" >
    
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

       <TextView
           android:id="@+id/settingPayOut_addressTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/settingPayOut_addressTitle" />

       <EditText
           android:id="@+id/settingPayOut_addressInput"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:hint="@string/settingPayOut_addressInput"
           android:ems="10" >
           <requestFocus />
       </EditText>

        <TextView
            android:id="@+id/settingPayOut_ruleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingPayOut_ruleTitle" />

        <Spinner
            android:id="@+id/settingPayOut_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <FrameLayout
            android:id="@+id/settingPayOut_content_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         	android:paddingLeft="@dimen/activity_horizontal_margin"
    		android:paddingRight="@dimen/activity_horizontal_margin" />
        
        <Button
            android:id="@+id/settingPayOut_store_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settingPayOut_store_Btn" />
        
        <TextView
            android:id="@+id/settingPayOut_created_rules_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/settingPayOut_created_rules_Title" />

        <TextView
            android:id="@+id/settingPayOut_created_rules_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boundry"/>

        <Button
            android:id="@+id/settingPayOut_reset_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settingPayOut_reset_Btn" />
    
    </LinearLayout>
    
</ScrollView>

