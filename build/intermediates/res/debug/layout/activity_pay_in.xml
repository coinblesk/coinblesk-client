<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PayInActivity" >

    <TextView
        android:id="@+id/payIn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payIn_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="54sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/payIn_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/payIn_instruction"
        android:textColor="#33b5e5" />

    <TextView
        android:id="@+id/payIn_addressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/payIn_addressTitle"
        android:textSize="@dimen/textSizeBig"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/payIn_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/payIn_copyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/payIn_copy" />

    <Button
        android:id="@+id/payIn_sendMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/payIn_sendMail" />

    <Button
        android:id="@+id/payIn_showQRButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/payIn_showQR" />

</LinearLayout><!-- From: file:/home/rvoellmy/projects/coinblesk/workspace/app/src/main/res/layout/activity_pay_in.xml -->