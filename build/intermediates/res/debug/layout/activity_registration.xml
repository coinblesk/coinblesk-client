<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegistrationActivity" >

    <EditText
        android:id="@+id/signUpEditUsernameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/signUpEditUsernameText"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/signUpEditEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/signUpEditEmailText"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/signUpEditPasswordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/signUpEditPasswordText"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/signUpEditConfirmPasswordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/signUpEditConfirmPasswordText"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/signUpTermOfUseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUpTermOfUseTextView"
        android:textColor="#1e5db2" />

    <CheckBox
        android:id="@+id/signUpCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUpCheckBox" />

    <Button
        android:id="@+id/signUpAgreeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signUpAgreeBtn" />

</LinearLayout><!-- From: file:/home/rvoellmy/projects/coinblesk/workspace/app/src/main/res/layout/activity_registration.xml -->