<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <EditText
        android:id="@+id/calc_dialog_display"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:textSize="@dimen/calc_dialog_text_size" />

    <EditText
        android:id="@+id/calc_dialog_display_fake"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:textSize="@dimen/calc_dialog_text_size"
        android:visibility="invisible" />
    
    <Button
        android:id="@+id/enter_total"
        android:layout_width="250dp"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_alignLeft="@+id/calc_dialog_display"
        android:layout_alignRight="@+id/all_clear"
        android:layout_below="@+id/calc_dialog_display"
        android:text="@string/enter_total"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/seven"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/enter_total"
        android:text="7"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/eight"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/enter_total"
        android:layout_toRightOf="@id/seven"
        android:text="8"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/nine"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/enter_total"
        android:layout_toRightOf="@id/eight"
        android:text="9"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/four"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/seven"
        android:text="4"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/five"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/seven"
        android:layout_toRightOf="@id/four"
        android:text="5"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/six"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/seven"
        android:layout_toRightOf="@id/five"
        android:text="6"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/seven"
        android:layout_toRightOf="@id/six"
        android:text="x"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/one"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/four"
        android:text="1"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/two"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/four"
        android:layout_toRightOf="@id/one"
        android:text="2"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/three"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/four"
        android:layout_toRightOf="@id/two"
        android:text="3"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/four"
        android:layout_toRightOf="@id/three"
        android:text="-"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/decimal"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/one"
        android:text="."
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/zero"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/one"
        android:layout_toRightOf="@id/decimal"
        android:text="0"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/equals"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/one"
        android:layout_toRightOf="@id/zero"
        android:text="="
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/addition"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/one"
        android:layout_toRightOf="@id/equals"
        android:text="+"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/all_clear"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_above="@+id/six"
        android:layout_toRightOf="@+id/nine"
        android:text="@string/all_clear"
        android:textColor="#ffffff"
        android:textSize="@dimen/calc_dialog_text_size" />

    

</RelativeLayout><!-- From: file:/home/rvoellmy/projects/coinblesk/workspace/app/src/main/res/layout/dialog_calculator.xml -->