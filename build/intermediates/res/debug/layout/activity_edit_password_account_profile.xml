<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditPasswordAccountProfileActivity" >

    <TextView
        android:id="@+id/updatePasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:text="@string/updatePasswordTextView" />

    <EditText
        android:id="@+id/updatePasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/updatePasswordEditText"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/updatePasswordConfirmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"
        android:text="@string/updatePasswordConfirmTextView" />

    <EditText
        android:id="@+id/updatePasswordConfirmEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/updatePasswordConfirmEditText"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" />

    <Button
        android:id="@+id/updatePasswordBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingBottom="5dp"
        android:text="@string/updatePasswordBtn" />

</LinearLayout><!-- From: file:/home/rvoellmy/projects/coinblesk/workspace/app/src/main/res/layout/activity_edit_password_account_profile.xml -->